---
// src/layouts/Layout.astro
import '../styles/globals.css';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finanzas App</title>
  </head>
  <body class="min-h-screen bg-background">
    <!-- Header minimalista fijo -->
    <header class="sticky top-0 z-50 w-full border-b border-gray-200 bg-white/80 backdrop-blur-sm">
      <div class="container mx-auto px-4">
        <div class="flex h-14 items-center justify-center">
          <!-- Navegación centrada -->
          <nav class="flex items-center space-x-8 relative">
            <!-- Líneas decorativas -->
            <div class="absolute -bottom-2 left-0 right-0 flex justify-center">
              <div class="w-full max-w-xs border-t border-gray-200"></div>
            </div>
            <div class="absolute -bottom-3 left-0 right-0 flex justify-center">
              <div class="w-full max-w-xs border-t border-gray-100"></div>
            </div>

            <!-- Enlaces de navegación -->
            <a 
              href="/" 
              class="text-xs font-normal text-gray-600 hover:text-gray-900 transition-colors relative pb-4"
            >
              Principal
              <span class="absolute bottom-0 left-0 right-0 h-0.5 bg-gray-900 transform scale-x-0 transition-transform duration-200"></span>
            </a>
            <a 
              href="/reports" 
              class="text-xs font-normal text-gray-600 hover:text-gray-900 transition-colors relative pb-4"
            >
              Reportes
              <span class="absolute bottom-0 left-0 right-0 h-0.5 bg-gray-900 transform scale-x-0 transition-transform duration-200"></span>
            </a>
            <a 
              href="/otros" 
              class="text-xs font-normal text-gray-600 hover:text-gray-900 transition-colors relative pb-4"
            >
              Otros
              <span class="absolute bottom-0 left-0 right-0 h-0.5 bg-gray-900 transform scale-x-0 transition-transform duration-200"></span>
            </a>
          </nav>

          <!-- Controles a la derecha -->
          <div class="absolute right-4 flex items-center space-x-2">
            <!-- Botón modo oscuro -->
            <button class="p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-md transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
              </svg>
            </button>

            <!-- Botón login -->
            <button class="flex items-center space-x-1 px-3 py-1.5 text-xs text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-md transition-colors border border-gray-200">
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span>Login</span>
            </button>
          </div>
        </div>
      </div>
    </header>

    <!-- Contenido principal -->
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>

    <script>
      // Script para resaltar la página activa
      document.addEventListener('DOMContentLoaded', function() {
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll('nav a');
        
        navLinks.forEach(link => {
          const linkPath = link.getAttribute('href');
          // Resaltar si es la página exacta o si es la raíz y estamos en la raíz
          if ((currentPath === '/' && linkPath === '/') || 
              (currentPath !== '/' && currentPath === linkPath)) {
            link.classList.add('text-gray-900');
            link.querySelector('span').classList.add('scale-x-100');
          } else {
            link.classList.remove('text-gray-900');
            link.querySelector('span').classList.remove('scale-x-100');
          }
        });
      });
    </script>
  </body>
</html>