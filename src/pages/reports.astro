---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-light text-gray-900">Reportes</h1>
      <p class="text-muted-foreground mt-2">Análisis y reportes financieros detallados</p>
    </div>
    
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
        <h3 class="font-semibold">Reporte Mensual</h3>
        <p class="text-sm text-muted-foreground mt-2">Próximamente</p>
      </div>
      
      <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
        <h3 class="font-semibold">Análisis por Categoría</h3>
        <p class="text-sm text-muted-foreground mt-2">Próximamente</p>
      </div>
      
      <div class="rounded-lg border bg-card text-card-foreground shadow-sm p-6">
        <h3 class="font-semibold">Tendencias</h3>
        <p class="text-sm text-muted-foreground mt-2">Próximamente</p>
      </div>
    </div>
  </div>
</Layout>